/* pages/mtydream/index.wxss */
page{
    background-color: #E7F1FC;
}
.head-wrap{
  padding: 24rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #1485EE;
}
.head-wrap image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 24rpx;
  border-radius: 50%;
}
.head-wrap text{
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}
.mydream{
    padding-bottom: 200px;
    box-sizing: border-box;
}
.mydream_add{
    position: fixed;
    right: 35rpx;
    bottom: 120rpx;
    width: 106rpx;
    height: 106rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    font-weight: bold;
    background-color: #1485EE;
    border-radius: 50%;
}
.mydream_main_container{
    margin: 24rpx auto;
    width: 683rpx;
    height: 98rpx;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    margin-bottom: 4rpx;
    overflow: hidden;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    background: url('data:image/png;base64,');
    background-size: 100%;
    background-repeat: no-repeat;
}

.mydream_main_container_size{
    width: 683rpx;
    transform: translateX(172rpx);
    margin-left: -172rpx;
    transition: all 0.4s;
    padding-left: 34rpx;
    color: #1485EE;
    font-size: 18px;
    font-family: PingFangSC-regular;
    z-index: 2;
    padding-left: 84rpx;
    height: 98rpx;
    line-height: 98rpx;
}
.notdata{
    height: 600rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.notdata text {
    color: #272727;
    font-size: 48rpx;
    font-weight: 500;
}