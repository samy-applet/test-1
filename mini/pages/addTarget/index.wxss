.add_content{
    width: 680rpx;
    height: 400rpx;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    background-color: rgba(255, 255, 255, 100);
    text-align: center;
    margin-bottom: 4rpx;
    margin: 28rpx auto;
}
.add_content_title{
    margin: auto;
    margin-left: 28rpx;
    margin-right: 28rpx;
    height: 100rpx;
    border-bottom: 2rpx solid rgba(242, 242, 242, 100);
    text-align: left;
    line-height: 100rpx;
    color: rgba(0, 0, 0, 1);
    font-size: 18px;
    font-family: PingFangSC-regular;
    color: #1485EE;
}
.add_content_title .van-icon{
